    private void btnSomarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String strNumero1 = txtNumero1.getText();
        String strNumero2 = txtNumero2.getText();
        
        int n1 = Integer.parseInt(strNumero1); //mudar o valor de string para inteiro
        int n2 = Integer.parseInt(strNumero2);
        
        int resultado = n1 + n2;
        
        String strResultado = String.valueOf(resultado); //mudar de int para sting
        txtResultado.setText(strResultado);
        
        //limpar os campos
        txtNumero1.setText("");
        txtNumero2.setText("");
        
        
    }                                        

